@model TreeAttendance.Models.StudentModel
@{
    ViewBag.Title = "Create Student Profile";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"><a href="~/AdminHome">Admin</a></li>
        <li class="breadcrumb-item" aria-current="page"> <a href="~/Students">Students</a></li>
        <li class="breadcrumb-item" aria-current="page active">Create a New Student Profile</li>
    </ol>
</nav>

<div class="page-header">Create a New Student Profile</div>
<br /><br /><br />
<div class="row justify-content-lg-center">
    <div class="col-lg-auto" style="display:flex; text-align:center">
        <div class="col col-custom">
            @using (Html.BeginForm())
            {
                <p class="alert alert-primary">All fields are <strong>required</strong>.</p>
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ProfilePictureUri)
                    @Html.TextBoxFor(m => m.ProfilePictureUri, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ProfilePictureUri, null, new { @class = "text-danger" })
                </div>
                <br />
                <button type="submit" class="btn btn-primary btn-block">Create</button>
            }
        </div>
    </div>
</div>





