@model TreeAttendance.Models.StudentModel
@{
    ViewBag.Title = "Remove Student";
}

<br />
<br />


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"> <a href="~/AdminHome">Admin Home</a></li>
        <li class="breadcrumb-item" aria-current="page"> <a href="~/Students">Students</a></li>
        <li class="breadcrumb-item" aria-current="page"><a href="~/Students/Details/@Model.Id">Allen</a></li>
        <li class="breadcrumb-item" aria-current="page active">Remove</li>
    </ol>
</nav>

<div>
    <h2>Remove Student</h2>
    <br />
    <br />

    <div class="row">
        <div align="center" style="padding:70px">
            <img src="~/Content/img/@Model.ProfilePictureUri" width="100" height="100" />
            <br />
            <div style="padding: 7px">
                @Model.Name
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.Name)
        @Html.HiddenFor(m => m.ProfilePictureUri)
        <div class="row">
            <div class="col-sm-3 text-right">
            </div>
            <div class="col-sm-4">
                @Html.ActionLink("Cancel", "Index", new { id = Model.Id }, new { @class = "btn btn-success" })
                <input type="submit" value="Remove" class="btn btn-danger">
            </div>
        </div>
    }
</div>

