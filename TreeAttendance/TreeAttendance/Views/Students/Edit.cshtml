@model TreeAttendance.Models.StudentModel
@{
    ViewBag.Title = "Edit Student Profile";
}

<br />
<br />


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"> <a href="~/AdminHome">Admin Home</a></li>
        <li class="breadcrumb-item" aria-current="page"> <a href="~/Students">Students</a></li>
        <li class="breadcrumb-item" aria-current="page"><a href="~/Students/Details/@Model.Id">@Model.Name</a></li>
        <li class="breadcrumb-item" aria-current="page active">Update Profile</li>
    </ol>
</nav>

<div class="row">
    <div class="col-4" align="center" style="padding:70px">
            <img src="~/Content/img/@Model.ProfilePictureUri" width="100" height="100" />
            <br />
            <div style="padding: 7px">
                @Model.Name
            </div>
    </div>
    <div class="col-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-sm-2 text-right">
                    @Html.DisplayNameFor(m => m.Name)
                </div>
                <div class="col-sm-2">
                    @Html.EditorFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2 text-right">
                    @Html.DisplayNameFor(m => m.ProfilePictureUri)
                </div>
                <div class="col-sm-2">
                    @Html.EditorFor(m => m.ProfilePictureUri)
                    @Html.ValidationMessageFor(m => m.ProfilePictureUri)
                </div>
            </div>
            <div class="row" style="margin: 30px">
                <div style="margin-right: 30px">
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-success" })
                </div>
                <div style="margin-right: 30px">
                    <input type="submit" value="Save" class="btn btn-primary">
                </div>
            </div>
        }
    </div>
</div>










