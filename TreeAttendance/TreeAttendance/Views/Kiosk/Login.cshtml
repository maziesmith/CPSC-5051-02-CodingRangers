@{
    ViewBag.Title = "Kiosk Login";
}

<div class="row justify-content-md-center">
    <div class="col-md-auto" style="display:flex; text-align:center">
        <form class="form-signin">
            <img class="mb-4" src="~/Content/img/TreeIcon.png" alt="" width="72" height="72">
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" class="form-control" placeholder="Password">
            <div class="checkbox mb-3">
            </div>
            <a href="~/Kiosk" class="btn btn-lg btn-primary btn-block">Unlock Kiosk</a>
        </form>

    </div>
</div>

