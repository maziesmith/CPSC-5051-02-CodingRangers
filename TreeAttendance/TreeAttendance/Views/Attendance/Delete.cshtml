@model TreeAttendance.Models.AttendanceModel
@{
    ViewBag.Title = "Remove Attendance";
}
<ul class="nav nav-tabs nav-fill">
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/Index"><h5>Dashboard</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Students/Index"><h5>Students</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="~/Attendance/Index"><h5>Attendance</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/ReportsIndex"><h5>Reports</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Trees/Index"><h5>Trees</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/Calendar"><h5>Calendar</h5></a>
    </li>
</ul>


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"> <a href="~/Attendance">Attendance</a></li>
        <li class="breadcrumb-item" aria-current="page"><a href="~/Attendance/Details">@Model.Student.Name, @Model.SchoolDay.Date</a></li>
        <li class="breadcrumb-item" aria-current="page active">Remove</li>
    </ol>
</nav>
<div class="page-header">Remove Attendance</div>

<div class="row">
    <div align="center" style="padding:70px">
        <img src="~/Content/img/@Model.Student.ProfilePictureUri" width="100" height="100" />
        <br />
        <div style="padding: 7px">
            @Model.Student.Name
        </div>
        <div style="padding: 7px">
            @Model.SchoolDay.Date
        </div>
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.SchoolDay)
    @Html.HiddenFor(m => m.Student)
    //@Html.HiddenFor(m => m.ExcusedAbsence)
    <p class="alert alert-danger">Are you sure you want to <strong>remove</strong> this attendance record?</p>
    <br/>
    <div class="row">
        <div class="col-sm-1">
            @Html.ActionLink("Cancel", "Index", new { id = Model.Id }, new { @class = "btn btn-success" })
        </div>
        <div class="col-sm-1">
            <input type="submit" value="Remove" class="btn btn-danger">
        </div>


    </div>
}

