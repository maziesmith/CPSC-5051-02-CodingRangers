@model TreeAttendance.Models.ViewModels.AttendanceViewModel
@{
    ViewBag.Title = "Remove Attendance";
}
<ul class="nav nav-tabs nav-fill">
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/Index"><h5>Dashboard</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Students/Index"><h5>Students</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="~/Attendance/Index"><h5>Attendance</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/ReportsIndex"><h5>Reports</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Trees/Index"><h5>Trees</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Calendar/Index"><h5>Calendar</h5></a>
    </li>
</ul>


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"> <a href="~/Attendance">Attendance</a></li>
        <li class="breadcrumb-item" aria-current="page"><a href="~/Attendance/Read/@Model.Attendance.Id">@Model.StudentName, @Model.Date.ToString("D")</a></li>
        <li class="breadcrumb-item" aria-current="page active">Remove</li>
    </ol>
</nav>
<div class="page-header">Remove Attendance</div>

<div class="text-center">

        <img class="profile-img" src="~/Content/img/@Model.Uri" />
        <div class="label">
            @Model.StudentName
            <br/>
            @Model.Date.ToString("D")
        </div>
</div>

<br/>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Attendance.Id)
    <p class="alert alert-danger">Are you sure you want to <strong>remove</strong> this attendance record?</p>
    <br />
    <div>
        @Html.ActionLink("Cancel", "Read", new { id = Model.Attendance.Id }, new { @class = "btn btn-success custom" })
    </div>
    <br/>
    <div>
        <input type="submit" value="Remove" class="btn btn-danger custom">
    </div>


}

