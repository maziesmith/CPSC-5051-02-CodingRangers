@model TreeAttendance.Models.ViewModels.AttendanceViewModel
@{
    ViewBag.Title = "Attendance Details";
}
<ul class="nav nav-tabs nav-fill">
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/Index"><h5>Dashboard</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Students/Index"><h5>Students</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="~/Attendance/Index"><h5>Attendance</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/ReportsIndex"><h5>Reports</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Trees/Index"><h5>Trees</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/Calendar"><h5>Calendar</h5></a>
    </li>
</ul>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"> <a href="~/Attendance">Attendance</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.StudentName, @Model.Date</li>
    </ol>
</nav>
<div class="page-header">Attendance Details</div>
<div class="row">
    <div class="col-3" align="center">
        <img src="~/Content/img/@Model.Uri" width="100" height="100" />
        <div class="label">
            @Model.StudentName
        </div>
    </div>
</div>
<br />
<div class="row" id="row-left-margin">
    @for (int i = 0; i < Model.Attendance.AttendanceCheckIns.Count(); i++)
    {
        <div class="card" style="width: 250px;">
            <div class="card-header">Check-in #@(i+1)</div>
            <div class="card-body">
                <div style="padding: 15px">Check-in Time:<br /> @Model.Attendance.AttendanceCheckIns[i].CheckIn</div>

                <div style="padding: 15px">Check-out Time:<br /> @Model.Attendance.AttendanceCheckIns[i].CheckOut</div>
                <br />
                <div>
                    <a href="~/Attendance/Update/@Model.Attendance.Id/@i" class="btn btn-outline-primary btn-sm" style="width: 200px">Edit</a>
                </div>
            </div>
        </div>
    }
</div>



