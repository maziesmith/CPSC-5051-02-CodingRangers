@model List<TreeAttendance.Models.StudentModel>
@{
    ViewBag.Title = "Attendance Index";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"><a href="~/AdminHome">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page">Attendance</li>
    </ol>
</nav>

<div class="page-header">Attendance</div>
<div class="text-center">
    <h5>Find, Read and Update Attendance Records</h5>
</div>
<br/>
<ul class="nav nav-pills nav-fill">
    <li class="nav-item">
        <a class="nav-link active" href="~/Attendance/Index">Find by Student</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Attendance/IndexByDate">Find by Date</a>
    </li>
</ul>
<br />
<br />
<div class="row">

    @{
        if (Model.Count == 0)
        {
            <br />
            <p>No Students in the System</p>
            <br />
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-3" align="center">
                    <a id="@item.Id" href="~/Attendance/ByStudent/@item.Id">
                        <img class="profile-img rounded-circle" src="/Content/img/@item.ProfilePictureUri"/>
                        <div class="label">
                            @item.Name
                        </div>
                    </a>
                </div>

            }
        }
    }

</div>

<br />



