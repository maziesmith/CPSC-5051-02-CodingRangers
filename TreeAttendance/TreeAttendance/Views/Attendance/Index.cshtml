@{
    ViewBag.Title = "Attendance Index";
}
<br />
<br />


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"> <a href="~/AdminHome">Admin Home</a></li>
        <li class="breadcrumb-item" aria-current="page"> <a href="~/Attendance">Attendance</a></li>
        <li class="breadcrumb-item active" aria-current="page">Index</li>
    </ol>

</nav>

<div class="row">
    <div style="margin-left: 15px; margin-right: 600px">
        <h2>Manage Attendance by Student</h2>
    </div>

</div>
<div class="container-index">
    <div class="row">

        @{
            if (Model.Count == 0)
            {
                <br />
                <p>No Students in the System</p>
                <br />
            }
            else
            {
                foreach (var item in Model)
                {
                    <div class="col-4" align="center">
                        <a id="@item.Id" href="~/Attendance/ByStudent/@item.Id">
                            <img src="~/Content/img/@item.ProfilePictureUri" width="100" height="100" />
                            <br />
                            <span>
                                @item.Name
                            </span>
                        </a>
                    </div>

                }
            }
        }

    </div>
</div>
