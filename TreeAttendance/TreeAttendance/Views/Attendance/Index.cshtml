<div class="page-header">Attendance</div>
<ul class="nav nav-pills nav-fill">
    <li class="nav-item">
        <a class="nav-link active" href="~/Attendance/Index">Find by Student</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Attendance/IndexByDate">Find by Date</a>
    </li>
</ul>
<br />
<br />
<div class="row">

    @{
        if (Model.Count == 0)
        {
            <br />
            <p>No Students in the System</p>
            <br />
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-3" align="center">
                    <a id="@item.Id" href="~/Attendance/ByStudent/@item.Id">
                        <img src="~/Content/img/@item.ProfilePictureUri" width="100" height="100" />
                        <div class="label">
                            @item.Name
                        </div>
                    </a>
                </div>

            }
        }
    }

</div>

