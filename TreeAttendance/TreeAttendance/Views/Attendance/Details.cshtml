@model TreeAttendance.Models.AttendanceModel
@{
    ViewBag.Title = "Attendance Details";
}
<br />
<br />


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"> <a href="~/AdminHome">Admin Home</a></li>
        <li class="breadcrumb-item" aria-current="page"> <a href="~/Attendance">Attendance</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Student.Name, @Model.SchoolDay.Date</li>
    </ol>
</nav>
<div class="row">
    <div align="center" style="padding:15px">
        <img src="~/Content/img/@Model.Student.ProfilePictureUri" width="100" height="100" />
        <br />
        <div style="padding: 10px">
            @Model.Student.Name
        </div>
        <div style="padding: 10px">
            @Model.SchoolDay.Date
        </div>
    </div>


</div>
<div>
    <h4>Attendance Details:</h4>
    <br />
</div>
<div class="row">
    @foreach (var item in Model.AttendanceCheckIns)
    {
        <div class="card" style="width: 250px;">
            <div class="card-header">Check-in</div>
            <div class="card-body">

                <div style="padding: 15px">Check-in Time: @item.CheckIn</div>

                <div style="padding: 15px">Check-out Time: @item.CheckOut</div>
                <br />
                <div>
                    <a href="~/Attendance/Edit/@item.Id" class="btn btn-outline-primary btn-sm" style="width: 200px">Edit</a>
                </div>
            </div>
        </div>
    }
</div>



<br />
<a href="~/Attendance/Excuse/1" class="btn btn-outline-primary">Excused Absence?</a>
<br />
<br />

<div>
    <a href="~/Attendance/Delete/1" class="btn btn-outline-danger">Remove This Attendance Record</a>
</div>
