@model TreeAttendance.Models.ViewModels.AttendanceCheckInViewModel
@{
    ViewBag.Title = "DeleteCheckIn";
}

<ul class="nav nav-tabs nav-fill">
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/Index"><h5>Dashboard</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Students/Index"><h5>Students</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="~/Attendance/Index"><h5>Attendance</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/ReportsIndex"><h5>Reports</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Trees/Index"><h5>Trees</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Calendar/Index"><h5>Calendar</h5></a>
    </li>
</ul>


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"> <a href="~/Attendance">Attendance</a></li>
        <li class="breadcrumb-item" aria-current="page"><a href="~/Attendance/Read/@Model.AttendanceId">@Model.StudentName, @Model.Date.ToString("D")</a></li>
        <li class="breadcrumb-item" aria-current="page active">Delete Check-in #@(Model.Index + 1)</li>
    </ol>
</nav>

<div class="page-header">Remove Check-in</div>
<br />
<div class="text-center">
    <img class="profile-img" src="~/Content/img/@Model.Uri" />
    <div class="label">
        @Model.StudentName
        <br />
        @Model.Date
        <br />
        Check-in #@(Model.Index + 1)
        <br />
        Check-in Time:<br /> @Model.CheckIn.ToString(@"hh\:mm")
        <br />
        Check-out Time:<br /> @Model.CheckOut.ToString(@"hh\:mm")
    </div>
</div>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.AttendanceId)
    <p class="alert alert-danger">Are you sure you want to <strong>remove</strong> this attendance check-in?</p>
    <br />
        <div>
            @Html.ActionLink("Cancel", "Read", new { id = Model.AttendanceId }, new { @class = "btn btn-success custom" })
        </div>
        <br/>
        <div>
            <input type="submit" value="Remove" class="btn btn-danger custom">
        </div>


}
