<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"><a href="~/AdminHome">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page">Attendance</li>
    </ol>
</nav>

<div class="page-header">Attendance</div>
<div class="text-center">
    <h5>Find, Read and Update Attendance Records</h5>
</div>
<br />
<ul class="nav nav-pills nav-fill">
    <li class="nav-item">
        <a class="nav-link" href="~/Attendance/Index">Find by Student</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="~/Attendance/IndexByDate">Find by Date</a>
    </li>
</ul>
<br />
<br />
<div class="row">
    @if (Model.Count == 0)
    {
        <br />
        <p>No school day in the System</p>
        <br />
    }
    else
    {

        for (int i = Model.Count - 1; i >= 0; i--)
        {
            <div class="col-2">
                <a href="~/Attendance/ByDate/@Model[i].Id" class="label">
                    <h5>@Model[i].Date.ToString("MM/dd/yyyy")</h5>
                </a>
            </div>
        }


    }

</div>


