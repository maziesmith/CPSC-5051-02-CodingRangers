@model List<TreeAttendance.Models.SchoolDayModel>
@{
    ViewBag.Title = "Attendance Index by Date";
}
<ul class="nav nav-tabs nav-fill">
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/Index"><h5>Dashboard</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Students/Index"><h5>Students</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="~/Attendance/Index"><h5>Attendance</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/ReportsIndex"><h5>Reports</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Trees/Index"><h5>Trees</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Calendar/Index"><h5>Calendar</h5></a>
    </li>
</ul>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"> <a href="~/Attendance">Attendance</a></li>
        <li class="breadcrumb-item active" aria-current="page">Index</li>
    </ol>

</nav>

<div class="page-header">Attendance</div>
<br />
<ul class="nav nav-pills nav-fill">
    <li class="nav-item">
        <a class="nav-link" href="~/Attendance/Index">Find by Student</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="~/Attendance/IndexByDate">Find by Date</a>
    </li>
</ul>
<br />
<br />
<div class="row" style="height: 400px">
    @if (Model.Count == 0)
    {
        <br />
        <p>No school day in the System</p>
        <br />
    }
    else
    {
        <div class="col-2">
            <div class="list-group">
                @for (int i = Model.Count - 1; i >= 0; i--)
                {
                    <a href="~/Attendance/ByDate/@Model[i].Id" class="list-group-item list-group-item-action list-group-item-success">@Model[i].Date.ToString("MM/dd/yyyy")</a>
                }
            </div>
        </div>
    }

</div>


