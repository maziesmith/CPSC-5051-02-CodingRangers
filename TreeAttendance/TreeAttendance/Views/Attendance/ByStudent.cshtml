@model TreeAttendance.Models.StudentModel
@{
    ViewBag.Title = "Attendance by Student";
}
<br />
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/Index"><h5>Dashboard</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Students/Index"><h5>Students</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="~/Attendance/Index"><h5>Attendance</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/ReportsIndex"><h5>Reports</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Trees/Index"><h5>Trees</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/Calendar"><h5>Calendar</h5></a>
    </li>
</ul>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"> <a href="~/Attendance">Attendance</a></li>
        <li class="breadcrumb-item active" aria-current="page">By Student: @Model.Name</li>
    </ol>
</nav>
<div class="page-header">Find Attendance by Date</div>
<div class="row">
    <div align="center" style="padding:70px">
        <img src="~/Content/img/@Model.ProfilePictureUri" width="100" height="100" />
        <br />
        <div style="padding: 7px">
            @Model.Name
        </div>
    </div>
</div>
<div class="container-index">
    <div class="row">
        @foreach (var item in Model.AttendanceList)
        {
            <div class="col-4">
                <a href="~/Attendance/Details/@item.Id">
                    @item.SchoolDay.Date
                </a>
            </div>
        }
    </div>
</div>
