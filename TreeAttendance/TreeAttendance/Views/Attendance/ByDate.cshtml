@model TreeAttendance.Models.SchoolDayModel
@{
    ViewBag.Title = "Attendance by School Day";
}
<ul class="nav nav-tabs nav-fill">
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/Index"><h5>Dashboard</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Students/Index"><h5>Students</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="~/Attendance/Index"><h5>Attendance</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/ReportsIndex"><h5>Reports</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Trees/Index"><h5>Trees</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/Calendar"><h5>Calendar</h5></a>
    </li>
</ul>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"> <a href="~/Attendance">Attendance</a></li>
        <li class="breadcrumb-item active" aria-current="page">By SchoolDay: @Model.Date</li>
    </ol>
</nav>
<div class="page-header">Find Attendance by Date</div>
<div class="row" id="row-left-margin">
    @foreach (var item in Model.AttendanceList)
    {
        <div class="col-4" align="center">
            <a id="@item.Id" href="~/Attendance/Details/@item.Id">
                <img src="~/Content/img/@item.Student.ProfilePictureUri" width="100" height="100" />
                <br />
                <span>
                    @item.Student.Name
                </span>
            </a>
        </div>

    }
</div>

