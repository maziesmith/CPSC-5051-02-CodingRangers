@using TreeAttendance.Models
@{
    ViewBag.Title = "Trees Details";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"> <a href="~/AdminHome">Admin</a></li>
        <li class="breadcrumb-item" aria-current="page"> <a href="~/Trees">Student Trees</a></li>
        <li class="breadcrumb-item active" aria-current="page">Tree Details</li>
    </ol>
</nav>
<div class="page-header">Tree Details</div>
<br />
<div class="row">
    <div class="col-5 text-center">
        <h4>
            Current Tree Stage: 3
        </h4>
        <img src="~/Content/img/tree1-3-01.png" class="tree-img" />
    </div>
    <div class="col-6 text-center">

        <div class="col text-center">
            <h4>
                Current Leaf Count: <a class="text-success"> @SystemGlobals.Instance.LeafCount</a>
            </h4>
        </div>
        <br/><br /><br />
        <h4>Reward the Student with Bonus Leaves</h4>
        <div class="row">
            <div class="col">
                <div class="card text-center reward-card">
                    <img class="card-img-top  reward-img" src="~/Content/img/gold.jpg" alt="Card image cap">
                    <div class="card-body">
                        <a href="~/Trees/Edit/gold" class="btn btn-primary">+3 Leaves</a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-center reward-card">
                    <img class="card-img-top  reward-img" src="~/Content/img/silver.jpg" alt="Card image cap">
                    <div class="card-body">
                        <a href="~/Trees/Edit/silver" class="btn btn-primary">+2 Leaves</a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-center reward-card">
                    <img class="card-img-top reward-img" src="~/Content/img/bronze.jpg" alt="Card image cap">
                    <div class="card-body">
                        <a href="~/Trees/Edit/bronze" class="btn btn-primary">+1 Leaves</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />

<div class="row">

</div>
<br />






