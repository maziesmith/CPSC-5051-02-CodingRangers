@model List<TreeAttendance.Models.StudentModel>
@{
    ViewBag.Title = "Index";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"> <a href="~/AdminHome">Admin</a></li>
        <li class="breadcrumb-item" aria-current="page"> <a href="~/Trees">Trees</a></li>
    </ol>
</nav>
<div class="page-header">Student Trees</div>
<div class="text-center">
    <h5>Reward Students with Bonus Leaves</h5>
</div>
<br />
<br />
<div class="row">

    @{
        if (Model.Count == 0)
        {
            <br />
            <p>No Students in the System</p>
            <br />
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-3" align="center">
                    <a id="@item.Id" href="~/Trees/Details/@item.Id">
                        <img class="profile-img rounded-circle" src="/Content/img/@item.ProfilePictureUri" />
                        <div class="label">
                            @item.Name
                        </div>
                    </a>
                </div>

            }
        }
    }

</div>

<br />