@model List<TreeAttendance.Models.StudentModel>
@{
    ViewBag.Title = "Students Reports Index";
}


@* Let's the user quickly know where in the website they are *@

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"> <a href="~/AdminHome">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page">Reports</li>
    </ol>
</nav>

@* Let's the user know what page they are on *@

<div class="page-header">Reports</div>
<div class="text-center">
    <h5>See Monthly Reports of Students</h5>
</div>
@* Let's the user see reports of individual students or class *@
<br />
<br />
<div class="row">

    @{
        if (Model.Count == 0)
        {
            <br />
            <p>No Students in the System</p>
            <br />
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-3" align="center">
                    <a id="@item.Id" href="~/Reports/StudentReports/@item.Id">
                        <img class="profile-img rounded-circle" src="/Content/img/@item.ProfilePictureUri" />
                        <div class="label">
                            @item.Name
                        </div>
                    </a>
                </div>

            }
        }
    }

</div>

<br />