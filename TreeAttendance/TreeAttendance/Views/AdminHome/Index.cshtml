@using TreeAttendance.Models
@{
    ViewBag.Title = "Dashboard";
}
<ul class="nav nav-tabs nav-fill">
    <li class="nav-item">
        <a class="nav-link active" href="~/AdminHome/Index"><h5>Dashboard</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Students/Index"><h5>Students</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Attendance/Index"><h5>Attendance</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/AdminHome/ReportsIndex"><h5>Reports</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Trees/Index"><h5>Trees</h5></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="~/Calendar/Index"><h5>Calendar</h5></a>
    </li>
</ul>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"><a href="~/AdminHome">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
    </ol>
</nav>

<div class="page-header">Hi, Admin.</div>
<br />
<div class="card border-primary">
    <div class="card-header text-center">
        <h5>Today is @SystemGlobals.Instance.Today.ToString("D")</h5>
    </div>
</div>
<br/>
<div class="card-group">
    <div class="card text-center border-info">
        <div class="card-body">
            <h5 class="card-title">Current</h5>
            <h5 class="card-title">9</h5>
        </div>
    </div>
    <div class="card text-center border-primary">
        <div class="card-body">
            <h5 class="card-title">Present</h5>
            <h5 class="card-title">8</h5>
        </div>
    </div>
    <div class="card text-center border-success">
        <div class="card-body">
            <h5 class="card-title">On Time</h5>
            <h5 class="card-title">6</h5>
        </div>
    </div>
    <div class="card text-center border-warning">
        <div class="card-body">
            <h5 class="card-title">Left</h5>
            <h5 class="card-title">0</h5>
        </div>
    </div>
</div>
<br />
<div class="card border-primary">
    <div class="card-header text-center">
        <h5>Attendance Statistics over the Last 5 Days</h5>
    </div>
</div>

<div class="row">
    <table class="table table-bordered table-custom">
        <thead>
            <tr class="thead-dark">
                <th>Name</th>
                <th>Days Attended</th>
                <th>Hours Attended</th>
                <th>% of Hours Attended</th>
                <th>% change</th>
                <th>Today's Check-in</th>
            </tr>
        </thead>
        <tbody>
            <tr class="table-success">
                <td>Allen</td>
                <td>5</td>
                <td>27</td>
                <td>90%</td>
                <td>+5%</td>
                <td>8:55AM</td>
            </tr>
            <tr class="table-success">
                <td>Mike</td>
                <td>5</td>
                <td>30</td>
                <td>100%</td>
                <td>+5%</td>
                <td>8:35AM</td>
            </tr>
            <tr class="table-warning">
                <td>Yanny</td>
                <td>4</td>
                <td>24</td>
                <td>80%</td>
                <td>-8%</td>
                <td>9:35AM</td>
            </tr>
            <tr class="table-danger">
                <td>Laurel</td>
                <td>2</td>
                <td>10</td>
                <td>30%</td>
                <td>-40%</td>
                <td>9:05AM</td>
            </tr>
            <tr class="table-success">
                <td>Jake</td>
                <td>5</td>
                <td>30</td>
                <td>100%</td>
                <td>+20%</td>
                <td>8:35AM</td>
            </tr>
            <tr class="table-warning">
                <td>Megan</td>
                <td>3</td>
                <td>18</td>
                <td>60%</td>
                <td>-10%</td>
                <td>8:45AM</td>
            </tr>
            <tr class="table-danger">
                <td>Alex</td>
                <td>2</td>
                <td>12</td>
                <td>35%</td>
                <td>-30%</td>
                <td></td>
            </tr>
            <tr class="table-success">
                <td>Linda</td>
                <td>5</td>
                <td>27</td>
                <td>90%</td>
                <td>+40%</td>
                <td>8:39AM</td>
            </tr>
            <tr class="table-warning">
                <td>Zac</td>
                <td>3</td>
                <td>18</td>
                <td>60%</td>
                <td>-15%</td>
                <td>9:35AM</td>
            </tr>
        </tbody>
    </table>
</div>
