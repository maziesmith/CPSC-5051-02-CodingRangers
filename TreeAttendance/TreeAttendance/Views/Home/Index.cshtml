@{
    ViewBag.Title = "Tree Attendance";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="first-slide" src="~/Content/img/slide1.png" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="second-slide" src="~/Content/img/slide2.png" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="third-slide" src="~/Content/img/slide3.png" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="fourth-slide" src="~/Content/img/slide4.png" alt="Fourth slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>






    <div class="jumbotron text-center">
        <h1 class="display-4">Welcome to Tree Attendance!</h1>
        <p class="lead">An engaging attendance system that builds passion inside out as well as encourages and celebrates excellent attendance.</p>
        <hr class="my-4">
        <img src="~/Content/img/treeTogether.png" class="jumb-img" />
    </div>


    <div class="row">
        <div class="col-md-4">
            <h2>Grow with Your Tree</h2>
            <p style="height:100px">
                Everyday is a growing day, grow trees while attending classes.
            </p>
        </div>
        <div class="col-md-4">
            <h2>Keep Track of Your Attendance</h2>
            <p style="height:100px">
                Keep Track of your daily check-ins and check-outs.
            </p>
        </div>
        <div class="col-md-4">
            <h2>Review Your Attendance Reports</h2>
            <p style="height:100px">
                Review your monthly performance reports.
            </p>
        </div>
    </div>


    <hr />
    <div>
        <a href="~/Home/ResetApp" class="btn btn-warning">Data Reset (for Demo Purposes)</a>
    </div>
